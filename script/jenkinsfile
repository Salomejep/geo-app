pipeline{
    agent any
    tools{
        maven 'M2_HOME'
    }
    stages{
        stage('sonar-scan'){
            steps{
                withSonarQubeEnv('sonarQube'){
                sh 'mvn verify org.sonarsource.scanner.maven:sonar-maven-plugin:sonar -Dsonar.projectKey=Salomejep_geo-app'
                }
                
            }
        }
        stage('maven'){
            steps{
            sh 'mvn clean'
            sh 'mvn validate' 
            sh 'mvn compile'
            sh 'mvn install'
            sh 'mvn test'
            sh 'mvn package'
            }
            
        }
        stage('upload artifact'){
            steps{
            sh 'curl -uadmin:AP8gcgmmset5jeYChTJYDN6XmDd -T  \
            target/bio*.jar \
            "http://ec2-3-237-103-63.compute-1.amazonaws.com:8081/artifactory/geoapp/geo/bio_${BUILD_ID}.jar"'
            }

        }
        stage('docker login'){
            steps{
            sh 'aws ecr get-login-password --region us-east-1 \
             | docker login --username AWS --password-stdin 965662434281.dkr.ecr.us-east-1.amazonaws.com'
        }    
        }
        stage('docker build'){
            steps{
            sh 'docker build -t utc-app-dev:latest .'
            sh 'docker build -t utc-app-dev:v.$(BUILD_ID) .'
        }    
        }
        stage('image tagging'){
            steps{
            sh 'docker tag utc-app-dev:latest 965662434281.dkr.ecr.us-east-1.amazonaws.com/utc-app-dev:latest'
            sh 'docker tag utc-app-dev:latest 965662434281.dkr.ecr.us-east-1.amazonaws.com/utc-app-dev:v.$(BUILD_ID)'
        }    
        }
        stage('docker push image'){
            steps{
            sh 'docker push 965662434281.dkr.ecr.us-east-1.amazonaws.com/utc-app-dev:latest'
            sh 'docker push 965662434281.dkr.ecr.us-east-1.amazonaws.com/utc-app-dev:v.$(BUILD_ID)'
        }
        }
        stage('docker login 1'){
            steps{
                sh 'aws ecr get-login-password --region us-east-1 \
                | docker login --username AWS --password-stdin 965662434281.dkr.ecr.us-east-1.amazonaws.com'
            }
        }
        
        }    

        }    

